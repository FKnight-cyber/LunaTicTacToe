{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2022",
    "module": "commonjs",                     
    "esModuleInterop": true,                                    
    "forceConsistentCasingInFileNames": true,            
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "typeRoots": ["node_modules/@types"],
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "src/**/*",
    "**/*.test.ts"
  ]
}