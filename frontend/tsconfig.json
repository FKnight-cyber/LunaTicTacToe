{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es6",
    "types": ["cypress", "node"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strictNullChecks": false,
    "noEmit": true,
    "noImplicitAny": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src",
    "cypress",
    "../node_modules/cypress"
  ]
}